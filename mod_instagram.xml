<?xml version="1.0" encoding="utf-8"?>
<install type="module"  method="upgrade" version="1.6">
    <name>Instagram</name>
    <creationDate>2012-05-07</creationDate>
    <author>Daniel Eliasson Stilero Webdesign</author>
    <authorEmail>joomla@stilero.com</authorEmail>
    <authorUrl>http://www.stilero.com</authorUrl>
    <copyright>Copyright (C) 2012 Daniel Eliasson Stilero Webdesign Open Source Matters. All rights reserved.</copyright>	
    <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
    <version>1.0</version>
    <description>A module for displaying instagram images</description>
    <files>
        <filename module="mod_instagram">mod_instagram.php</filename>
        <folder>tmpl</folder>
        <folder>elements</folder>
        <folder>images</folder>
        <folder>helpers</folder>
        <folder>js</folder>
        <filename>helper.php</filename>
        <filename>instaClass.php</filename>
        <filename>index.html</filename>
        <filename>mod_instagram.xml</filename>
    </files>
    <languages>
        <language tag="en-GB">language/en-GB.mod_instagram.ini</language>
        <language tag="de-DE">language/de-DE.mod_instagram.ini</language>            
    </languages>
    <config>
        <fields name="params" >
            <fieldset name="basic" addfieldpath="/modules/mod_instagram/elements">
                <field name="instructions_code" type="instructions" label="instructions"/>
                <field name="client_id" type="text" default="" label="MOD_INSTAGRAM_CLIENT_ID" description="MOD_INSTAGRAM_CLIENT_ID_DESC" />
                <field name="client_secret" type="text" default="" label="MOD_INSTAGRAM_CLIENT_SECRET" description="MOD_INSTAGRAM_CLIENT_SECRET_DESC" />
                <field name="redirect_uri" type="redirecturi" default="" />
                <field name="authorize" type="authorize" default="" label="" description="" />
                <field name="auth_code" type="hidden" default="" />
                <field name="access_token" type="hidden" default="" />
                <field name="base_uri" type="baseuri" default="" />
                <field name="helpers_uri" type="helpersuri" />
            </fieldset>
        </fields>
    </config>			
</install>